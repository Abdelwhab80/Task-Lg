@model Task_Lg.Models.ProductViewModel

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div>
        <label for="Name">Name:</label>
        <input type="text" asp-for="ProductBase.Name" class="form-control" />
    </div>

    <input type="hidden" name="ProductBase.ProductType" value="Furniture" /> 

    <div>
        <label for="Model">Model:</label>
        <input type="text" asp-for="PrinterProduct.Model" class="form-control" />
    </div>

    <div>
        <label for="Brand">Brand:</label>
        <input type="text" asp-for="PrinterProduct.Brand" class="form-control" />
    </div>
    <div>
        <label for="ip">ip:</label>
        <input type="text" asp-for="PrinterProduct.ip" class="form-control" />
    </div>

</form>
