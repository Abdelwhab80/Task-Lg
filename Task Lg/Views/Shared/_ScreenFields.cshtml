
@model Task_Lg.Models.ProductViewModel

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div>
        <label for="Name">Name:</label>
        <input type="text" asp-for="ProductBase.Name" class="form-control" />
    </div>

    <input type="hidden" name="ProductBase.ProductType" value="Clothing" /> 

    <div>
        <label for="Color">Color:</label>
        <input type="text" asp-for="ScreenProduct.Color" class="form-control" />
    </div>

    <div>
        <label for="Size">Size:</label>
        <input type="text" asp-for="ScreenProduct.Size" class="form-control" />
    </div>
    <div>
        <label for="Quality">Quality:</label>
        <input type="text" asp-for="ScreenProduct.Quality" class="form-control" />
    </div>

</form>
