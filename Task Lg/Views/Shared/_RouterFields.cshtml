@model Task_Lg.Models.ProductViewModel

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div>
        <label for="Name">Name:</label>
        <input type="text" asp-for="ProductBase.Name" class="form-control" />
    </div>

    <input type="hidden" name="ProductBase.ProductType" value="Furniture" /> 

    <div>
        <label for="Model">Model:</label>
        <input type="text" asp-for="RouterProduct.Model" class="form-control" />
    </div>

    <div>
        <label for="Speed">Speed:</label>
        <input type="text" asp-for="RouterProduct.Speed" class="form-control" />
    </div>
    <div>
        <label for="NumberOfPorts">NumberOfPorts:</label>
        <input type="number" asp-for="RouterProduct.NumberOfPorts" class="form-control" />
    </div>
    <div>
        <label for="ip">ip:</label>
        <input type="text" asp-for="RouterProduct.ip" class="form-control" />
    </div>

</form>
