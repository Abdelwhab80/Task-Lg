@model Task_Lg.Models.ProductViewModel

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div>
        <label for="Name">Name:</label>
        <input type="text" asp-for="ProductBase.Name" class="form-control" />
    </div>

    <input type="hidden" name="ProductBase.ProductType" value="Labtop" /> 
    <div>
        <label for="Model">Model:</label>
        <input type="text" asp-for="LabtopProduct.Model" class="form-control" />

    </div>

    <div>
        <label for="Type">Type:</label>
        <input type="text" asp-for="LabtopProduct.Type" class="form-control" />

    </div>
    <div>
        <label for="Ram">Ram:</label>
        <input type="text" asp-for="LabtopProduct.Ram" class="form-control" />

    </div>
    <div>
        <label for="Prossecor">Prossecor:</label>
        <input type="text" asp-for="LabtopProduct.Prossecor" class="form-control" />

    </div>

</form>
